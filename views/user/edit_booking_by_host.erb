<div style="text-align: center;">
  <h1 class="mt-3">Edit booking </h1>
  <div class="container"> 
  <div class="row">
    <div class="col-6 mx-auto text-align-center border border-2 border-dark p-5 m-5" >
    <form action="/user/dashboard/<%= @user_id %>/bnb/<%= @booking.bnb_id %>/booking/<%= @booking.id %>" method="post">
    <input type="hidden" name="_method" value="PATCH" />
  <div class="mb-3">

    <label for="start_date" class="form-label">Start date:</label>
    <input type="date" class="form-control " name="start_date" id="start_date" value="<%= @booking.start_date %>" 
     >
  </div>
  <div class="mb-3">
    <label for="end_date" class="form-label">End date:</label>
    <input type="date" class="form-control" name="end_date" id="end_date"value="<%= @booking.end_date %>"  >
  </div>
  <button type="submit" class="btn btn-dark">Update</button>
</form>
    </div>
  </div>
</div>
</div>
