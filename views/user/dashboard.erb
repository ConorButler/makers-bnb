<h1>Your Dashboard</h1>
</div>
<form action='/user/<%= @user_id %>/bnb/new'>
  <input type="submit" value="Add new bnb" style="width:130px;height:40px;">
</form>
<ul class="flex-container wrap">
  <% if @bnb %>
  <% @bnb.each do |bnb| %>
    <li class="flex-item bnb">
        Name <%= bnb.name %> <br>
        <p>Location: <%= bnb.location %></p>
      <form style="display: inline;" action="/user/<%= @user_id %>/bnb/<%= bnb.id %>" method="post">
        <input type='hidden' name='_method' value='DELETE'/>
        <input type="submit" value="Delete" />
      </form>
      <form style="display: inline;" action="/user/<%= @user_id %>/bnb/<%= bnb.id %>/edit" method="get">
        <input type="submit" value="Edit" />
      </form>
    </li>
  <% end %>
  <% else %>
  No BNBs
  <% end %>
</ul>