<div class="container mt-5">

<div class="row flex-grow-1">
  <div class="col pd-4 mx-auto text-align-center">
    <h1 class="display-3"><%= @bnb.name %></h1>
  </div>
</div>

<div class="container-fluid">

    <div class="row flex-grow-1">
    <div class="col pd-4 mx-auto text-align-center">
    
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
        <img src="https://picsum.photos/600/300" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
        <img src="https://picsum.photos/600/300" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
        <img src="https://picsum.photos/600/300" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    </div>

  </div>
</div>

<div class="container my-3">
  <div class="row">
    <div class="col-9">
      <h2>Description:</h2>
      <p><%= @bnb.description %></p>
    </div>
    <div class="col-3">
      <h4>Price: $<%= @bnb.price %> per night</h4>
      <h4>Location: <%= @bnb.location %></h4>
        <form action="/user/booking/<%= @bnb.id %>/new" method="post" class="py-2">
          <label for="Start" class="form-label">Start date:</label>
            <input type="date" name="start_date" value="<%= params[:start_date] %>" id="Start" class="form-control">
          <label for="End" class="form-label">End date:</label>
           <input type="date" name="end_date" value="<%= params[:end_date] %>" id="End" class="form-control">
          <input type="submit" value="Book BnB" class="btn btn-dark mx-2 mt-3">
        </form>
        <h3>
          <%= flash[:notice] %>
        </h3>
    </div>
  </div>
</div>



 <% if @user %>
 <% if @bookings %>
  <% @bookings.each do |reservation| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Card title</h5>
          <h6 class="card-subtitle mb-2 text-muted">Check-in: <%= reservation.start_date %> </h6>
          <h6 class="card-subtitle mb-2 text-muted">Check-out: <%= reservation.end_date %> </h6>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
          <form style="display: inline;" action="/user/dashboard/<%= @user_id %>/bnb/<%= reservation.bnb_id %>/booking/<%= reservation.id %>" method="post">
              <input type='hidden' name='_method' value='DELETE'/>
              <input class="btn btn-dark mx-2" type="submit" value="Delete" />
            </form>
            <form style="display: inline;" action="/user/dashboard/<%= @user_id %>/bnb/<%= reservation.bnb_id %>/booking/<%= reservation.id %>/edit" method="get">
              <input class="btn btn-dark mx-2" type="submit" value="Edit" />
          </form>
      </div>
  <% end %>
  <% else %>
  No Bookings
  <% end %>
  <% end %>




 <% if @user %>
  <% @dates.avalibility.each do |date| %>
  <% if date.last == false %>
  <span style="background-color: red;"> | <%= date.first %> </span>
  <% else %>
    | <span style="color: green;"> <%= date.first %> </span>
  <% end %>
  <% end %>

  <% end %>
