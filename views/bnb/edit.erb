<div style="text-align: center;">
  <h1 class="mt-3">Edit listing </h1>
  <div class="container"> 
  <div class="row">
    <div class="col-6 mx-auto text-align-center border border-2 border-dark p-5 m-5" >
    <form action="/user/dashboard/<%= @user_id %>/bnb/<%= @bnb.id %>" method="post">
    <input type="hidden" name="_method" value="PATCH" />
  <div class="mb-3">

    <label for="Name" class="form-label">Name</label>
    <input type="text" class="form-control" name="name" id="Name" placeholder="<%= @bnb.name %>" value="<%= @bnb.name %>"
     >
  </div>
  <div class="mb-3">
    <label for="Location" class="form-label">Location</label>
    <input type="text" class="form-control" name="location" id="Location" placeholder="<%= @bnb.location %>" value="<%= @bnb.location %>">
  </div>
  <div class="mb-3">
  <label for="Price" class="form-label">Price</label>
  <input type="number" class="form-control" name="price" id="Price" placeholder="<%= @bnb.price %>" value="<%= @bnb.price %>">
</div>
  <button type="submit" class="btn btn-dark">Update</button>
</form>
    </div>
  </div>
</div>
</div>
